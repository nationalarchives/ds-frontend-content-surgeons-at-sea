<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <clear />
                <rule name="redirect http to https" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                        <add input="{HTTPS}" pattern="off" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/surgeonsatsea/{R:1}" />
                </rule>
                <rule name="podcasts to media player" stopProcessing="true">
                    <match url="^podcasts.htm$" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
                    <action type="Redirect" url="https://media.nationalarchives.gov.uk/index.php/tag/surgeons-at-sea/" />
                </rule>

            </rules>
        </rewrite>
    </system.webServer>
</configuration>
